
@{
    ViewBag.Title = "_CustomerMessagesLayout";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Mailbox</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE-3.2.0/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/AdminLTE-3.2.0/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.2.0/dist/css/adminlte.min.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/AdminLTE-3.2.0/plugins/summernote/summernote-bs4.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        @{ if (ViewContext.RouteData.Values["Action"].ToString() == "InComingMessages")
                            {
                                <h1>Gelen Kutusu</h1>
                            }
                            else if (ViewContext.RouteData.Values["Action"].ToString() == "SentMessages")
                            {
                                <h1>Gönderilmiş</h1>
                            }
                            else if (ViewContext.RouteData.Values["Action"].ToString() == "MessageContent")
                            {
                                <h1>İçerik</h1>
                            }
                            else if (ViewContext.RouteData.Values["Action"].ToString() == "NewMessage")
                            {
                                <h1>Yeni Mesaj Oluştur</h1>
                            }
                            else if (ViewContext.RouteData.Values["Action"].ToString() == "DeletedMessages")
                            {
                                <h1>Çöp Kutusu</h1>
                            }
                        }
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-3">
                    @{
                        if (ViewContext.RouteData.Values["Action"].ToString() == "InComingMessages" || ViewContext.RouteData.Values["Action"].ToString() == "SentMessages" || ViewContext.RouteData.Values["Action"].ToString() == "DeletedMessages")
                        {
                            <a href="@Url.Action("NewMessage", "CustomerPanel")" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
                        }
                        else
                        {
                            <a href="@Url.Action("InComingMessages", "CustomerPanel")" class="btn btn-primary btn-block mb-3">Gelen Kutusuna Dön</a>
                        }
                    }

                    @*@{
                            if (ViewContext.RouteData.Values["Action"].ToString() == "InComingMessages")
                            {
                                <a href="@Url.Action("NewMessage", "CustomerPanel")" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
                            }
                            else if (ViewContext.RouteData.Values["Action"].ToString() == "MessageContent")
                            {
                                <a href="@Url.Action("InComingMessages", "CustomerPanel")" class="btn btn-primary btn-block mb-3">Gelen Kutusuna Dön</a>
                            }
                            else if (ViewContext.RouteData.Values["Action"].ToString() == "NewMessage")
                            {
                                <a href="@Url.Action("InComingMessages", "CustomerPanel")" class="btn btn-primary btn-block mb-3">Gelen Kutusuna Dön</a>
                            }
                        }*@
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Klasörler</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item active">
                                    <a href="@Url.Action("InComingMessages", "CustomerPanel")" class="nav-link">
                                        <i class="fas fa-inbox"></i> Gelen Kutusu
                                        <span class="badge bg-primary float-right">@ViewBag.comingMessages</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("SentMessages", "CustomerPanel")" class="nav-link">
                                        <i class="far fa-envelope"></i> Gönderilmiş
                                        <span class="badge bg-success float-right">@ViewBag.sent</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-file-alt"></i> Taslaklar
                                        <span class="badge bg-info float-right">100</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="fas fa-filter"></i> Gereksiz
                                        <span class="badge bg-warning float-right">100</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("DeletedMessages", "CustomerPanel")" class="nav-link">
                                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                                        <span class="badge bg-danger float-right">@ViewBag.deletedMessages</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">@*Filtreler*@Etiketler</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item">
                                    <a href="@Url.Action("InComingMessages", "CustomerPanel")" class="nav-link">
                                        <i class="far fa-circle text-danger"></i>
                                        Önemliler
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("MessageContent", "CustomerPanel")" class="nav-link">
                                        <i class="far fa-circle text-warning"></i> Promosyonlar
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("NewMessage", "CustomerPanel")" class="nav-link">
                                        <i class="far fa-circle text-primary"></i>
                                        Sosyal
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
                @RenderBody()
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/AdminLTE-3.2.0/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE-3.2.0/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE-3.2.0/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    @*<script src="~/AdminLTE-3.2.0/dist/js/demo.js"></script>*@
    <!-- Page specific script -->
    <script>
        $(function () {
            //Enable check and uncheck all functionality
            $('.checkbox-toggle').click(function () {
                var clicks = $(this).data('clicks')
                if (clicks) {
                    //Uncheck all checkboxes
                    $('.mailbox-messages input[type=\'checkbox\']').prop('checked', false)
                    $('.checkbox-toggle .far.fa-check-square').removeClass('fa-check-square').addClass('fa-square')
                } else {
                    //Check all checkboxes
                    $('.mailbox-messages input[type=\'checkbox\']').prop('checked', true)
                    $('.checkbox-toggle .far.fa-square').removeClass('fa-square').addClass('fa-check-square')
                }
                $(this).data('clicks', !clicks)
            })

            //Handle starring for font awesome
            $('.mailbox-star').click(function (e) {
                e.preventDefault()
                //detect type
                var $this = $(this).find('a > i')
                var fa = $this.hasClass('fa')

                //Switch states
                if (fa) {
                    $this.toggleClass('fa-star')
                    $this.toggleClass('fa-star-o')
                }
            })
        })
    </script>
    <!-- Summernote -->
    <script src="~/AdminLTE-3.2.0/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote()
        })</script>
</body>
</html>

