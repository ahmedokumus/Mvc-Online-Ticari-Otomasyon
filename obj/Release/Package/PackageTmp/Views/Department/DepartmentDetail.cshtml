@using MvcOnlineTicariOtomasyon.Models
@model List<Employee>

@{
    ViewBag.Title = "DepartmentDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content">
    <div class="container-fluid text-center">
        <div class="row mb-2">
            <div class="col-4 text-start">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Departman Adı : @ViewBag.value</li>
                </ol>
            </div>
            <div class="col-4 text-center">
                <h2>Departman Detay</h2>
            </div>
            <div class="col-4 text-end">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Personel Adı</th>
                            <th>Personel Soyadı</th>
                            <th>Personel Görsel</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.EmployeeId</th>
                                <td>@item.EmployeeFirstName</td>
                                <td>@item.EmployeeLastName</td>
                                <td>@item.EmployeeImage</td>
                                <td><a href="@Url.Action("DepartmentEmployeeSales", "Department", new { id = item.EmployeeId })" class="btn btn-secondary btn-sm">Satışlar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>