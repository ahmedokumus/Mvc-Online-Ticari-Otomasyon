@model MvcOnlineTicariOtomasyon.Models.Customer

<div class="tab-pane" id="settings">
    <form method="post" action="@Url.Action("Update", "CustomerPanel")" class="form-horizontal">
        <div class="form-group row">
            <label for="CustomerFirstName" class="col-sm-2 col-form-label">Ad</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.CustomerFirstName" name="CustomerFirstName" id="CustomerFirstName" placeholder="Adınız">
            </div>
        </div>
        <div class="form-group row">
            <label for="CustomerLastName" class="col-sm-2 col-form-label">Soyad</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.CustomerLastName" name="CustomerLastName" id="CustomerLastName" placeholder="Soyadınız">
            </div>
        </div>
        <div class="form-group row">
            <label for="Email" class="col-sm-2 col-form-label">Mail Adresi</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" value="@Model.Email" readonly="readonly" name="Email" id="Email" placeholder="Mail Adresi">
            </div>
        </div>
        <div class="form-group row">
            <label for="CustomerCity" class="col-sm-2 col-form-label">Şehir</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.CustomerCity" name="CustomerCity" id="CustomerCity" placeholder="Şehir">
            </div>
        </div>
        <hr/>
        <div class="form-group row">
            <label for="Password" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.Password" name="Password" id="Password" placeholder="Skills">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Bilgileri okudum <a href="#">Şifre değiştirme şartlarını</a> Kabul ediyorum.
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-warning">Güncelle</button>
            </div>
        </div>
    </form>
</div>