@using MvcOnlineTicariOtomasyon.Models
@using PagedList.Mvc
@model PagedList.IPagedList<Employee>

@{
    ViewBag.Title = "EmployeeCardList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                        <div class="card bg-light d-flex flex-fill">
                            <div class="card-header text-muted border-bottom-0">
                                @item.Department.DepartmentName
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="lead"><b>@item.EmployeeFirstName @item.EmployeeLastName</b></h2>
                                        <p class="text-muted text-sm"><b>About: </b> Web Designer / UX / Graphic Artist / Coffee Lover </p>
                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: Demo Street 123, Demo City 04312, NJ</li>
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone #: + 800 - 12 12 23 52</li>
                                        </ul>
                                    </div>
                                    <div class="col-5 text-center">
                                        <img src="@item.EmployeeImage" alt="user-img" class="img-circle img-fluid">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="@Url.Action("DepartmentEmployeeSales", "Department", new { id = item.EmployeeId })" class="btn btn-sm btn-secondary">
                                        <i class="fas fa-shopping-basket"></i> Satışlar
                                    </a>
                                    <a href="@Url.Action("EmployeeUpdate","Employee", new { id = item.EmployeeId })" class="btn btn-sm bg-warning">
                                        <i class="fas fa-edit"></i> Güncelle
                                    </a>
                                    <a href="@Url.Action("EmployeeRemove","Employee", new { id = item.EmployeeId })k" class="btn btn-sm bg-danger">
                                        <i class="fas fa-trash-alt"></i> Sil
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <nav aria-label="Contacts Page Navigation">
                <ul class="pagination justify-content-center m-0">
                    @Html.PagedListPager(Model, page => Url.Action("EmployeeCardList", new { page }), new PagedListRenderOptions
                    {
                        LiElementClasses = new List<string> { "page-link" }
                    })
                </ul>
                @*<ul class="pagination justify-content-center m-0">
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item"><a class="page-link" href="#">6</a></li>
                    <li class="page-item"><a class="page-link" href="#">7</a></li>
                    <li class="page-item"><a class="page-link" href="#">8</a></li>
                </ul>*@
            </nav>
        </div>
        <!-- /.card-footer -->
    </div>
    <!-- /.card -->

</section>
