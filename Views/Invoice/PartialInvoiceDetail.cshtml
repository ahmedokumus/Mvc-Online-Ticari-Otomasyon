@using MvcOnlineTicariOtomasyon.Models
@model List<InvoiceItem>

<div class="container-fluid">
    <div class="row">
        <div class="col text-start">
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Fatura Seri Sıra no : @ViewBag.value</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Açıklama</th>
                        <th>Adet</th>
                        <th>Birim Fiyat</th>
                        <th>Toplam Tutar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.InvoiceId</td>
                            <td>@item.Description</td>
                            <td>@item.Piece</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.ItemsTotalPrice</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
