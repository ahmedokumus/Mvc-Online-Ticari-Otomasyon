@using MvcOnlineTicariOtomasyon.Models
@model List<InvoiceItem>

@{
    ViewBag.Title = "InvoiceDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-4 text-start">
                <a href="@Url.Action("InvoiceItemsAdd")" type="button" class="btn btn-info">Yeni Kalem Giriş</a>
            </div>
            <div class="col-4 text-center">
                <h2>Fatura Kalemleri Listesi</h2>
            </div>
            <div class="col-4 text-end">
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">Fatura Seri Sıra no : @ViewBag.value</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-hover" id="example">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Açıklama</th>
                            <th>Adet</th>
                            <th>Birim Fiyat</th>
                            <th>Toplam Tutar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.InvoiceId</td>
                                <td>@item.Description</td>
                                <td>@item.Piece</td>
                                <td>@item.UnitPrice</td>
                                <td>@item.ItemsTotalPrice</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
