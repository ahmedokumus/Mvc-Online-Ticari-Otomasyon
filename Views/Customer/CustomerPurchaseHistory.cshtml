@using MvcOnlineTicariOtomasyon.Breadcrumb
@using MvcOnlineTicariOtomasyon.Models
@model List<SalesMovement>

@{
    ViewBag.Title = "CustomerPurchaseHistory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-4 my-auto text-start">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Müşteri Adı : @ViewBag.value</li>
                </ol>
            </div>
            <div class="col-4 text-center">
                <h2>Müşteri Satın Alma Geçmişi</h2>
            </div>
            <div class="col-4 my-auto text-end">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Ürün Adı</th>
                            <th>Personel</th>
                            <th>Birim Fiyat</th>
                            <th>Adet</th>
                            <th>Toplam</th>
                            <th>Tarih</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SalesMovementId</td>
                                <td>@item.Product.ProductName</td>
                                <td>@item.Employee.EmployeeFirstName @item.Employee.EmployeeLastName</td>
                                <td>@item.Price</td>
                                <td>@item.Piece</td>
                                <td>@item.TotalPrice</td>
                                <td>@item.Date</td>
                                <td><a href="#" class="btn btn-secondary btn-sm">Yazdır</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

