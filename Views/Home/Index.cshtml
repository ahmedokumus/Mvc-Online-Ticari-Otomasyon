
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-orange">
                    <div class="inner">
                        <h3>@ViewBag.Products</h3>

                        <p>Ürün Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="@Url.Action("ProductList", "Product")" class="small-box-footer">
                        Daha Fazla <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@ViewBag.CityCount</h3>

                        <p>Şehir Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="@Url.Action("CustomerList", "Customer")" class="small-box-footer">
                        Daha Fazla <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-cyan">
                    <div class="inner">
                        <h3>@ViewBag.Customers</h3>

                        <p>Müşteri Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person"></i>
                    </div>
                    <a href="@Url.Action("CustomerList", "Customer")" class="small-box-footer">
                        Daha Fazla <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-teal">
                    <div class="inner">
                        <h3>@ViewBag.Categories</h3>

                        <p>Kategori Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="@Url.Action("CategoryList", "Category")" class="small-box-footer">
                        Daha Fazla <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-7 connectedSortable">
                <!-- TO DO List -->
                @Html.Action("PartialToDoList", "Home")
                <!-- /.card -->
                <!-- DIRECT CHAT -->
                @Html.Action("PartialDirectChat", "Home")
                <!--/.direct-chat -->
                <!-- Custom tabs (Charts with tabs)-->
                @Html.Action("PartialCustomTabs", "Home")
                <!-- /.card -->
            </section>
            <!-- right col (We are only adding the ID to make the widgets sortable)-->
            <section class="col-lg-5 connectedSortable">
                <!-- Calendar -->
                @Html.Action("PartialCalendar", "Home")
                <!-- /.card -->
                <!-- Map card -->
                @Html.Action("PartialMapCard", "Home")
                <!-- /.card -->
                <!-- Solid Sales Graph -->
                @Html.Action("PartialSolidSalesGraph", "Home")
                <!-- /.card -->
            </section>
        </div>
    </div>
</section>
