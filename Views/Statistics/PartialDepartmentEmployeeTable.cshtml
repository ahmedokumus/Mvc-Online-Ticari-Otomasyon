@model IEnumerable<MvcOnlineTicariOtomasyon.Models.ClassGroup2>

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Tablosu</h3>

        @*<div class="card-tools">
            <ul class="pagination pagination-sm float-right">
                <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
            </ul>
        </div>*@
    </div>
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress</th>
                    <th style="width: 40px">Adet</th>
                </tr>
            </thead>
            <tbody>
                @{ int rowNumber = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{rowNumber++;} @rowNumber</td>
                        <td>@item.DepartmentName</td>
                        <td>
                            @{
                                if (item.Number == 1)
                                {
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-danger" style="width: 25%"></div>
                                    </div>
                                }
                                else if (item.Number == 2)
                                {
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-warning" style="width: 50%"></div>
                                    </div>
                                }
                                else if (item.Number == 3)
                                {
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-primary" style="width: 75%"></div>
                                    </div>
                                }
                                else if (item.Number >= 4)
                                {
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-success" style="width: 100%"></div>
                                    </div>
                                }
                            }
                        </td>
                        <td>
                            @{
                                if (item.Number == 1)
                                {
                                    <span class="badge bg-danger">@item.Number</span>
                                }
                                else if (item.Number == 2)
                                {
                                    <span class="badge bg-warning">@item.Number</span>
                                }
                                else if (item.Number == 3)
                                {
                                    <span class="badge bg-primary">@item.Number</span>
                                }
                                else if (item.Number >= 4)
                                {
                                    <span class="badge bg-success">@item.Number</span>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
